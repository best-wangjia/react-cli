{
  "compilerOptions": {
    "target": "es2018",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "src/*" : ["./src/*"],
      "api/*" : ["./src/api/*"],
      "assets/*" : ["./src/assets/*"],
      "common/*" : ["./src/common/*"],
      "components/*" : ["./src/components/*"],
      "pages/*" : ["./src/pages/*"],
      "store/*" : ["./src/store/*"],
      "utils/*" : ["./src/utils/*"],
      "router/*" : ["./src/router/*"],
      "hooks/*" : ["./src/hooks/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
  "include": [
    "src/**/*"
  ],
  "typeAcquisition": {
    "exclude": [
      "dotenv"
    ]
  }
}